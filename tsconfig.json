{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "~*": ["./src/*"]
    },
    "outDir": "dist",
    "module": "esnext",
    "target": "esnext",
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"],
    "lib": [
      "es6",
      "dom"
    ],
    "downlevelIteration": true,
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declaration": true,
    "strict": true,
  },
  "include": ["./src/**/*"],
}